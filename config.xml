<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0"
    id        = "app.mobile.hellooEvent"
	versionCode = "001" 
    version   = "1.0.0">
	
    <name>HellooEvent</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-device" source="npm" spec="2.0.3" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="2.4.3" />
    <plugin name="cordova-plugin-camera" source="npm" spec="4.1.0" />
    <plugin name="cordova-plugin-google-analytics" source="npm" spec="1.9.0" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="5.0.4" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
